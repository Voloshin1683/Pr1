#include <stdio.h> 
 
int funk(int b) { 
    // якщо 1 цифра, то 2 можливих числа
    if (b == 1) 
        return 2; 
    //Якщо 2 цифри, то 4 можливих числа
    if (b == 2) 
        return 4; 
 
    // Обчислення кількості чисел
    return funk(b - 1) + funk(b - 2); 
} 
 
int main() { 
    int n; 
    printf("Введіть кількість цифр (n <= 30): "); 
    scanf("%d", &n); 
 
    if (n > 30) { 
        printf("Помилка! Перевищено кількість цифр 30.\n"); 
        return 0; 
    } 
 
    // Виведення результату
    printf("%d\n", funk(n)); 
    return 0; 
